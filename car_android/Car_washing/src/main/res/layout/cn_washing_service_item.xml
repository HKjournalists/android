<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cn_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_list_item_selector"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/ivServiceImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@null"/>

        <LinearLayout
            android:id="@+id/llServiceDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/llAction"
            android:layout_toRightOf="@+id/ivServiceImg"
            android:orientation="vertical">
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@null"
                android:textColor="@color/cn_common_cars_bgcolor"
                android:textSize="16sp"/>
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvServiceDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@null"
                android:textColor="@color/cn_common_cars_bgcolor"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvServicePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@null"
                android:textColor="@color/cn_orangered5"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/ivServiceArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/cn_icon_right_arrow"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/cn_line_color"/>
</LinearLayout>