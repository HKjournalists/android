<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/rlWashingMian"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cn_white"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/cn_oranger_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/llPriceDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@null"
                    android:textColor="@color/cn_white"
                    android:textSize="16sp"/>
                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/tvCouponPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@null"
                    android:textColor="@color/cn_white"
                    android:textSize="16sp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_pay_selector"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="@string/cn_pay"
                android:textColor="@color/cn_pay_color"
                android:textSize="20sp"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cn_line_color"/>

    <com.kplus.car.carwash.widget.CNCustomScrollView
        android:id="@+id/svScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlBottom"
        android:layout_below="@+id/viewTop"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cn_white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--选择的服务项目-->
                <com.kplus.car.carwash.widget.CNWashingServiceListView
                    android:id="@+id/lvServiceList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cn_transparent"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@color/cn_white"
                    android:dividerHeight="15dp"
                    android:listSelector="#00ffffff"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_bg_selector">
                    <ImageView
                        android:id="@+id/ivName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/cn_margin_left"
                        android:src="@drawable/cn_icon_name"/>
                    <com.kplus.car.widget.RegularEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/ivName"
                        android:background="@null"
                        android:hint="@string/cn_enter_name_hint"
                        android:imeOptions="actionUnspecified"
                        android:maxLines="1"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:singleLine="true"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="50dp"
                    android:background="@color/cn_line_color"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_bg_selector">
                    <ImageView
                        android:id="@+id/ivMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/cn_margin_left"
                        android:src="@drawable/cn_icon_mobile"/>
                    <com.kplus.car.widget.RegularEditText
                        android:id="@+id/etMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/ivMobile"
                        android:background="@null"
                        android:digits="1234567890"
                        android:hint="@string/cn_enter_mobile_hint"
                        android:imeOptions="actionUnspecified"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:singleLine="true"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="50dp"
                    android:background="@color/cn_line_color"/>

                <RelativeLayout
                    android:id="@+id/rlCarInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_bg_selector">
                    <ImageView
                        android:id="@+id/ivCarInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/cn_margin_left"
                        android:src="@drawable/cn_icon_car"/>
                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/tvCarInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toLeftOf="@+id/ivCarInfoArrow"
                        android:layout_toRightOf="@+id/ivCarInfo"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="@string/cn_enter_carinfo_hint"
                        android:maxLines="1"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:singleLine="true"
                        android:text="@null"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/ivCarInfoArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/cn_icon_right_arrow"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="50dp"
                    android:background="@color/cn_line_color"/>

                <RelativeLayout
                    android:id="@+id/rlCarLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_bg_selector">
                    <ImageView
                        android:id="@+id/ivCarLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/cn_margin_left"
                        android:src="@drawable/cn_icon_location_press"/>
                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/tvCarLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/ivLocationArrow"
                        android:layout_toRightOf="@+id/ivCarLocation"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="@string/cn_enter_car_location_hint"
                        android:maxLines="1"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:singleLine="true"
                        android:text="@null"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/ivLocationArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/cn_icon_right_arrow"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="50dp"
                    android:background="@color/cn_line_color"/>

                <RelativeLayout
                    android:id="@+id/rlServiceTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_bg_selector">
                    <ImageView
                        android:id="@+id/ivServiceTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/cn_margin_left"
                        android:src="@drawable/cn_icon_time"/>
                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/tvServiceTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toLeftOf="@+id/ivServiceTimeArrow"
                        android:layout_toRightOf="@+id/ivServiceTime"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="@string/cn_enter_service_time"
                        android:maxLines="1"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:singleLine="true"
                        android:text="@null"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/ivServiceTimeArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/cn_icon_right_arrow"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/cn_line_color"/>

                <RelativeLayout
                    android:id="@+id/rlWorkerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_bg_selector"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/ivWorkerPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/cn_margin_left"
                        android:src="@drawable/icon_search_worker_phone"/>

                    <com.kplus.car.widget.RegularEditText
                        android:id="@+id/etWorkerPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toLeftOf="@+id/tbtnSwitch"
                        android:layout_toRightOf="@+id/ivWorkerPhone"
                        android:background="@null"
                        android:digits="1234567890"
                        android:hint="@string/cn_enter_worker_phone"
                        android:inputType="phone|number"
                        android:maxLength="11"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:singleLine="true"
                        android:text="@null"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>

                    <ToggleButton
                        android:id="@+id/tbtnSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/btn_toggle_selector"
                        android:checked="false"
                        android:text=""
                        android:textOff=""
                        android:textOn=""/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/cn_line_color"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/cn_space_color"/>

                <!--代金劵 start-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cn_line_color"/>

                <RelativeLayout
                    android:id="@+id/rlVoucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_bg_selector">
                    <ImageView
                        android:id="@+id/ivVoucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/cn_margin_left"
                        android:src="@drawable/cn_icon_voucher"/>
                    <com.kplus.car.widget.RegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/ivVoucher"
                        android:background="@null"
                        android:maxLines="1"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:text="@string/cn_voucher"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>

                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/tvVoucherPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/ivVoucherArrow"
                        android:singleLine="true"
                        android:text="@null"
                        android:textColor="@color/cn_orangered5"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/ivVoucherArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/cn_icon_right_arrow"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/cn_line_color"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/cn_space_color"/>

                <!--代金劵 end-->

            </LinearLayout>

            <!--最后加一个空白的项-->
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/cn_white"/>
        </LinearLayout>
    </com.kplus.car.carwash.widget.CNCustomScrollView>
</RelativeLayout>