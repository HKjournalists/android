<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="45dp"
    android:layout_gravity="center"
    android:background="@drawable/stroke_corner_gray"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <!--android:background="@drawable/stroke_corner_orange_line"-->
    <!--android:textColor="@color/daze_orangered5"-->

    <com.kplus.car.widget.RegularTextView
        android:id="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:minWidth="25dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@null"
        android:textColor="@color/daze_darkgrey9"
        android:textSize="16sp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="5dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/daze_delete_city"/>
</LinearLayout>