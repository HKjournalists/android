<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/daze_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/daze_white_smoke6"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@null"
            android:textColor="@color/daze_darkgrey9"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal">
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@null"
                android:textColor="@color/daze_orangered5"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/ivMore"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:background="@drawable/mine_edit"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <com.kplus.car.widget.RegularTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="保养里程"
            android:textColor="@color/daze_darkgrey9"
            android:textSize="16sp"/>

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/licheng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="\@null"
            android:textColor="@color/daze_black2"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <com.kplus.car.widget.RegularTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="保养店名"
            android:textColor="@color/daze_darkgrey9"
            android:textSize="16sp"/>

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/company"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/daze_black2"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <com.kplus.car.widget.RegularTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="联系方式"
            android:textColor="@color/daze_darkgrey9"
            android:textSize="16sp"/>

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/daze_black2"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBaoyangItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.kplus.car.widget.RegularTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="保养项目"
            android:textColor="@color/daze_darkgrey9"
            android:textSize="16sp"/>

        <com.kplus.car.widget.FlowLayout
            android:id="@+id/rlBaoyangItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:gravity="center_vertical">
        </com.kplus.car.widget.FlowLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <com.kplus.car.widget.RegularTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="备注"
            android:textColor="@color/daze_darkgrey9"
            android:textSize="16sp"/>

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/remark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="@null"
            android:textColor="@color/daze_black2"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>