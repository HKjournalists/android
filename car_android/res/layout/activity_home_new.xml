<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kplus.car.activity.HomeNewActivity"
    android:id="@+id/root">

    <ImageView
        android:id="@+id/bg1"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:src="@drawable/background_01"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bg1"
        android:background="@drawable/background_02"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/location_layout"
        android:layout_width="wrap_content"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/location"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/daze_white"
            android:textSize="19sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/location_icon"
            android:padding="8dp"/>

    </RelativeLayout>

    <com.kplus.car.widget.CirclePageIndicator
        android:id="@+id/indicator"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        app:radius="4dp"
        app:pageColor="@color/daze_translucence4"
        app:strokeWidth="0dp"/>

    <ImageView
        android:id="@+id/btn_add_bg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:layout_marginTop="62dp"
        android:src="@drawable/add_menu_bg"/>

    <ImageView
        android:id="@+id/btn_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:layout_marginTop="62dp"
        android:src="@drawable/add_menu"
        android:scaleType="center"/>

</RelativeLayout>
