<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/daze_white_smoke6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:background="@color/daze_white"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="保养时间"
                android:textColor="@color/daze_darkgrey9"
                android:textSize="16sp"/>

            <com.kplus.car.widget.MyTextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:drawableRight="@drawable/go_to"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="必填，上次去保养时间"
                android:paddingRight="16dp"
                android:textColor="@color/daze_black2"
                android:textColorHint="@color/daze_white_smoke2"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/daze_white"
            android:orientation="horizontal">

            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="保养里程(km)"
                android:textColor="@color/daze_darkgrey9"
                android:textSize="16sp"/>

            <com.kplus.car.widget.RegularEditText
                android:id="@+id/licheng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="必填，多少公里去做的保养"
                android:inputType="number"
                android:textColor="@color/daze_black2"
                android:textColorHint="@color/daze_white_smoke2"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/daze_white"
            android:orientation="horizontal">

            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="费用(元)"
                android:textColor="@color/daze_darkgrey9" android:textSize="16sp"
                android:id="@+id/" />

            <com.kplus.car.widget.RegularEditText
                android:id="@+id/money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="选填"
                android:inputType="number"
                android:textColor="@color/daze_black2"
                android:textColorHint="@color/daze_white_smoke2"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/daze_white"
            android:orientation="horizontal">

            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="保养店名"
                android:textColor="@color/daze_darkgrey9"
                android:textSize="16sp"/>

            <com.kplus.car.widget.MyTextView
                android:id="@+id/company"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:drawableRight="@drawable/go_to"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="选填"
                android:paddingRight="16dp"
                android:textColor="@color/daze_black2"
                android:textColorHint="@color/daze_white_smoke2"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/daze_white"
            android:orientation="horizontal">

            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="联系方式"
                android:textColor="@color/daze_darkgrey9"
                android:textSize="16sp"/>

            <com.kplus.car.widget.RegularEditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="选填"
                android:inputType="number"
                android:textColor="@color/daze_black2"
                android:textColorHint="@color/daze_white_smoke2"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/daze_white"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="保养项目"
                android:textColor="@color/daze_darkgrey9"
                android:textSize="16sp"/>

            <RelativeLayout
                android:id="@+id/rlBaoyangEmpty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingRight="18dp"
                android:textColor="@color/daze_black2"
                android:textColorHint="@color/daze_white_smoke2"
                android:textSize="18sp"
                android:visibility="visible">
                <com.kplus.car.widget.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:gravity="center_vertical"
                    android:text="选填，请选择"
                    android:textColor="@color/daze_white_smoke2"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/ivArrowIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/go_to"/>
            </RelativeLayout>

            <com.kplus.car.widget.FlowLayout
                android:id="@+id/rlBaoyangItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:visibility="gone">
            </com.kplus.car.widget.FlowLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/daze_white"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="备注"
                android:textColor="@color/daze_darkgrey9"
                android:textSize="16sp"/>

            <com.kplus.car.widget.RegularEditText
                android:id="@+id/remark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="选填，如：本次保养多换了空滤，下次不需要换"
                android:paddingRight="8dp"
                android:textColor="@color/daze_black2"
                android:textColorHint="@color/daze_white_smoke2"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
