<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <View
            android:id="@+id/o1"
            android:layout_width="178dp"
            android:layout_height="277dp"
            android:background="@drawable/s1_o1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="62dp"/>

        <View
            android:id="@+id/o2"
            android:layout_width="246dp"
            android:layout_height="326dp"
            android:background="@drawable/s1_o2"
            android:layout_marginTop="22dp"/>

        <View
            android:id="@+id/o3"
            android:layout_width="142dp"
            android:layout_height="171dp"
            android:background="@drawable/s1_o3"
            android:layout_alignRight="@id/o2"
            android:layout_marginRight="-10dp"/>

        <View
            android:id="@+id/o4"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:background="@drawable/s1_o4"
            android:layout_alignRight="@id/o3"
            android:layout_marginRight="12dp"
            android:layout_marginTop="80dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/title"
        android:layout_width="239dp"
        android:layout_height="107dp"
        android:background="@drawable/s1_title"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"/>
    
</RelativeLayout>