<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!-- 无网络、没数据等错误显示 -->
    <ImageView
        android:id="@+id/ivErrorIcon"
        android:layout_width="149dp"
        android:layout_height="149dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="63dp"
        android:src="@drawable/icon_location_failed"/>

    <com.kplus.car.widget.RegularTextView
        android:id="@+id/tvErrorTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="41dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="@string/error_location_failed_tips"
        android:textColor="@color/daze_darkgrey9"
        android:textSize="16sp"/>

    <com.kplus.car.widget.RegularTextView
        android:id="@+id/tvErrorSet"
        android:layout_width="202dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:background="@drawable/stroke_corner_orange_line"
        android:gravity="center"
        android:text="@string/error_location_failed_btn"
        android:textColor="@color/daze_orangered5"
        android:textSize="16sp"
        android:visibility="visible"/>

    <com.kplus.car.widget.RegularTextView
        android:id="@+id/tvErrorCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/check_network"
        android:textColor="@color/daze_blue5"
        android:visibility="gone"/>
</LinearLayout>