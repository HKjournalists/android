<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/daze_bgcolor"
    android:gravity="center_horizontal" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:src="@drawable/daze_wzxq_nonsupport" />
	<com.kplus.car.widget.RegularTextView
	    android:id="@+id/tvCityUnsupported"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="15dp"
	    android:text="违章查询暂未开通"
	    android:textColor="@color/daze_black2"
	    android:textSize="16dp" />
	<com.kplus.car.widget.RegularTextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="16dp"
	    android:text="小牛正在加班处理中..."
	    style="@style/font_caption" />
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:orientation="horizontal"
	    android:paddingLeft="16dp"
	    android:paddingRight="16dp"
	    android:layout_marginTop="16dp" >
	    <Button
	        android:id="@+id/btUnsupportEncourage"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/daze_button_background1"
	        android:text="鼓励小牛"
	        android:textColor="@color/daze_textcolor2"
	        android:textSize="15dp"
	        android:textStyle="bold"
	        android:gravity="center" />
	    <Button
	        android:id="@+id/btUnsupportRemind"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:layout_marginLeft="16dp"
	        android:background="@drawable/daze_btn_bg"
	        android:text="开通后提醒我"
	        android:textColor="@color/daze_textcolor2"
	        android:textSize="15dp"
	        android:textStyle="bold"
	        android:gravity="center"
	        android:visibility="visible" />
	</LinearLayout>
</LinearLayout>
