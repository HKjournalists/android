<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/daze_white">

    <LinearLayout
        android:id="@+id/add_alarm"
        android:layout_width="216dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_press">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/menu_reminder"
            android:layout_marginLeft="18dp"/>

        <com.kplus.car.widget.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/daze_black2"
            android:text="添加提醒"
            android:layout_marginLeft="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_vehicle"
        android:layout_width="216dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_press"
        android:layout_marginTop="54dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/menu_addvehicle"
            android:layout_marginLeft="18dp"/>

        <com.kplus.car.widget.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/daze_black2"
            android:text="添加车辆"
            android:layout_marginLeft="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_vehicle"
        android:layout_width="216dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_press"
        android:layout_marginTop="108dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/menu_editvehicle"
            android:layout_marginLeft="18dp"/>

        <com.kplus.car.widget.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/daze_black2"
            android:text="编辑车辆"
            android:layout_marginLeft="18dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
