<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:background="@color/daze_translucence2"
        android:id="@+id/" />

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/daze_orangered5"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/add_vehicle"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/white_circle"
                android:src="@drawable/icon_add"
                android:scaleType="center"/>

            <com.kplus.car.widget.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="添加车辆，查违章"
                android:textSize="16sp"
                android:textColor="@color/daze_white"/>

            <com.kplus.car.widget.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="交管网直连，查询快，数据准"
                android:textColor="@color/daze_darkgrey7"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/never_remind"
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:text="不再提醒"
                    android:textColor="@color/daze_white"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/next_time"
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:text="下次再说"
                    android:textColor="@color/daze_white"
                    android:textSize="14sp"
                    android:layout_marginLeft="45dp"
                    android:gravity="center"/>

            </LinearLayout>
            
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
