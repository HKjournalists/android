<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="236dp"
    tools:context="com.kplus.car.fragment.ShangyexianFragment">

    <ProgressBar
        android:id="@+id/chexian_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="236dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:max="365"
        android:progressDrawable="@drawable/circular_progress_bar3"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:indeterminate="false"
        android:max="365"
        android:progressDrawable="@drawable/stroke_oval"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.kplus.car.widget.RegularTextView
                android:id="@+id/chexian_date_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/daze_black2"
                android:textSize="90sp"/>

            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp"
                android:text="天"
                android:textColor="@color/daze_black2"
                android:textSize="26sp"/>

        </LinearLayout>

        <com.kplus.car.widget.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距商业险到期"
            android:textColor="@color/daze_darkgrey9"
            android:textSize="16sp"/>

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/chexian_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/daze_darkgrey9"
            android:textSize="16sp"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>
