<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:background="@color/daze_white"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="18dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="19sp"
            android:textColor="@color/daze_black2"/>

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/daze_light_grey1"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/trash"
        android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/on_off_icon"
        android:layout_width="72dp"
        android:layout_height="26dp"
        android:scaleType="center"
        android:src="@drawable/btn_on_off"/>

</LinearLayout>