<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/daze_white_smoke6" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="44dp"
	        android:background="@color/daze_white" >
	        <ImageView
	            android:id="@+id/ivGoBack"
	            android:layout_width="36dp"
	            android:layout_height="36dp"
	            android:layout_marginLeft="16dp"
	            android:layout_centerVertical="true"
	            android:padding="9dp"
	            android:src="@drawable/daze_but_icons_back" />
	        <com.kplus.car.widget.RegularTextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:text="评论"
	            android:textSize="16dp"
	            android:textColor="@color/daze_black2" />
	    </RelativeLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="2px"
			android:background="@color/daze_darkgrey7"/>
		<com.kplus.car.widget.RegularTextView
			android:id="@+id/provider_name"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:background="@color/daze_white"
			android:gravity="center_vertical"
			android:paddingLeft="16dp"
			android:textColor="@color/daze_black2"
			android:textSize="16sp"/>
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="56dp"
		    android:paddingLeft="24dp"
		    android:paddingRight="24dp"
		    android:background="@color/daze_black5" >
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/provider_comment_bg"
				android:layout_alignParentRight="true"/>
		    <com.kplus.car.widget.RegularTextView
		        android:id="@+id/tvComprehensiveScoreLabel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:text="综合评分："
		        android:textColor="@color/daze_white"
				android:textSize="14sp"/>
		    <com.kplus.car.widget.RatingBar
		        android:id="@+id/rbComprehensiveScore"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_toRightOf="@id/tvComprehensiveScoreLabel"
		        android:layout_marginLeft="4dp"
				android:layout_alignBottom="@id/tvComprehensiveScoreLabel"
				android:layout_marginBottom="2dp"/>
			<com.kplus.car.widget.RegularTextView
				android:id="@+id/ci"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:text="次"
				android:textColor="@color/daze_white"
				android:textSize="14sp"/>
			<com.kplus.car.widget.RegularTextView
				android:id="@+id/tvEvaluationNumber"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toLeftOf="@id/ci"
				android:layout_marginLeft="5dp"
				android:layout_alignBottom="@id/ci"
				android:layout_marginBottom="-4dp"
				android:textColor="@color/daze_orangered4"
				android:textSize="26sp"/>
		    <com.kplus.car.widget.RegularTextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
				android:layout_toLeftOf="@id/tvEvaluationNumber"
				android:text="累计服务："
				android:textColor="@color/daze_white"
				android:textSize="14sp"/>
		</RelativeLayout>
		<com.kplus.car.widget.pulltorefresh.library.PullToRefreshListView
		    android:id="@+id/prlEvaluation"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:scrollbars="none"
		    android:divider="@color/daze_white_smoke6"
		    android:dividerHeight="1dp"
		    android:cacheColorHint="#00000000" />
	</LinearLayout>
	<include layout="@layout/daze_loading"/>
</RelativeLayout>
