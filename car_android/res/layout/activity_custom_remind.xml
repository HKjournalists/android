<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/daze_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:background="@drawable/background_detailpage"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_marginTop="30dp">

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="236dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:indeterminate="false"
                android:max="365"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:indeterminate="false"
                android:max="365"
                android:progressDrawable="@drawable/stroke_oval"/>

            <LinearLayout
                android:id="@+id/llProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/date_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@null"
                        android:textColor="@color/daze_black2"
                        android:textSize="90sp"/>

                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/tian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="8dp"
                        android:text="å¤©"
                        android:textColor="@color/daze_black2"
                        android:textSize="26sp"/>

                </LinearLayout>

                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/tvCustomLableName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@null"
                    android:textColor="@color/daze_darkgrey9"
                    android:textSize="16sp"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:orientation="horizontal">
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/date_left_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@null"
                android:textColor="@color/daze_darkgrey9"
                android:textSize="16sp"/>

            <com.kplus.car.widget.RegularTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@null"
                android:textColor="@color/daze_darkgrey9"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/daze_white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLocationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/location_cus"/>

                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_toRightOf="@+id/ivLocationIcon"
                    android:gravity="center_vertical"
                    android:text="@null"
                    android:textColor="@color/daze_black2"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/ivArrowIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/daze_arrow_press_up"/>
            </RelativeLayout>

            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:background="@color/daze_darkgrey7"/>

            <LinearLayout
                android:id="@+id/llNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="27dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical" android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivNoteIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/notes"/>

                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="@null"
                    android:textColor="@color/daze_darkgrey9"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
