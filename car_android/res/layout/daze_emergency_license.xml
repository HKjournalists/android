<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/daze_bgcolor"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:background="@color/daze_bgcolor">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/daze_bgcolor"
	        android:focusable="true"
	        android:focusableInTouchMode="true">
            <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="@dimen/daze_activity_horizontal_margin"
		        android:background="@drawable/daze_emergency_help_license_bg"
		        android:orientation="vertical"
		        android:padding="20dp" >
		
		        <com.kplus.car.widget.RegularTextView
		            android:id="@+id/emergency_help_license_tip"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/daze_darkgrey1"
		            android:textSize="14sp" />
		
		        <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="10dp" >
		
		            <ImageView
		                android:layout_centerHorizontal="true"
		                android:id="@+id/emergency_help_license"
		                android:layout_width="240dp"
		                android:layout_height="180dp"
		                android:layout_marginTop="@dimen/daze_activity_horizontal_margin"
		                android:scaleType="fitCenter"
		                android:src="@drawable/daze_vehice_license_demo" />
		
		            <com.kplus.car.widget.RegularTextView
		                android:id="@+id/emergency_help_license_status"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:background="@drawable/daze_text_pink_s_bg"
		                android:text="照片范本"
		                android:textColor="@color/daze_white"
		                android:textSize="14sp" />
		        </RelativeLayout>
		    </LinearLayout>
		
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:weightSum="3" >
		
		        <com.kplus.car.widget.RegularTextView
		            android:id="@+id/emergency_help_license_uploadBtn"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal"
		            android:layout_margin="@dimen/daze_activity_vertical_margin"
		            android:layout_weight="1"
		            android:background="@drawable/daze_btn_orange_bg"
		            android:gravity="center"
		            android:paddingBottom="10dp"
		            android:paddingLeft="30dp"
		            android:paddingRight="30dp"
		            android:paddingTop="10dp"
		            android:text="上传图片"
		            android:textColor="@color/daze_white"
		            android:textSize="14sp"
		            android:visibility="visible" />
		
		        <com.kplus.car.widget.RegularTextView
		            android:id="@+id/emergency_help_license_confirmBtn"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal"
		            android:layout_margin="@dimen/daze_activity_vertical_margin"
		            android:layout_weight="1"
		            android:background="@drawable/daze_btn_blue_bg"
		            android:gravity="center"
		            android:paddingBottom="10dp"
		            android:paddingLeft="30dp"
		            android:paddingRight="30dp"
		            android:paddingTop="10dp"
		            android:text="确认提交"
		            android:textColor="@color/daze_white"
		            android:textSize="14sp"
		            android:visibility="gone" />
		
		        <com.kplus.car.widget.RegularTextView
		            android:id="@+id/emergency_help_license_loginBtn"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal"
		            android:layout_margin="@dimen/daze_activity_vertical_margin"
		            android:layout_weight="1"
		            android:background="@drawable/daze_btn_blue_bg"
		            android:gravity="center"
		            android:paddingBottom="10dp"
		            android:paddingLeft="30dp"
		            android:paddingRight="30dp"
		            android:paddingTop="10dp"
		            android:text="立即登录"
		            android:textColor="@color/daze_white"
		            android:textSize="14sp"
		            android:visibility="gone" />
		    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    <RelativeLayout
        android:id="@+id/llBottom"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="#99000000"
	    android:layout_alignParentBottom="true"
	    android:visibility="visible" >
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:background="@color/daze_bgcolor"
		    android:paddingLeft="20dp"
		    android:paddingRight="20dp"
		    android:paddingBottom="20dp"
		    android:paddingTop="15dp"
		    android:layout_alignParentBottom="true" >
		    <com.kplus.car.widget.RegularTextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="上传行驶证"
		        android:textColor="@color/daze_load_normal_end"
		        android:gravity="center"
		        android:textSize="13sp"
		        android:background="@color/daze_bgcolor" />
			<Button
			    android:id="@+id/btAlbum"
			    android:layout_width="match_parent"
			    android:layout_height="35dp"
			    android:layout_marginTop="10dp"
			    android:background="@drawable/daze_btn_bg_white"
			    android:gravity="center"
			    android:text="从相册选取"
			    android:textSize="15sp"
			    android:textColor="@color/daze_black2"/>
			<com.kplus.car.widget.RegularTextView
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:background="@color/daze_darkgrey7" />
			<Button
			    android:id="@+id/btCamera"
			    android:layout_width="match_parent"
			    android:layout_height="35dp"
			    android:background="@drawable/daze_btn_bg_white"
			    android:gravity="center"
			    android:text="拍照"
			    android:textSize="15sp"
			    android:textColor="@color/daze_black2" />		    
	        <Button
	            android:id="@+id/btCancel"
	            android:layout_marginTop="10dp"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:background="@drawable/daze_btn_bg_light_gray_2"
	            android:gravity="center"
	            android:text="取消"
	            android:textSize="15sp"
	            android:textColor="@color/daze_black2" />
        </LinearLayout>	
	</RelativeLayout>
	
	<include layout="@layout/daze_loading" />   
	
	<RelativeLayout
        android:id="@+id/rlProgressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/daze_translucence3"
        android:visibility="gone">
		<RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:background="@color/daze_translucence3"
	        android:layout_centerInParent="true">
	        <com.kplus.car.widget.RegularTextView
	            android:id="@+id/tvProgressbar"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"
	            android:text="图片上传中"
	            android:textColor="@color/daze_blue3"/>
	        <ProgressBar
		        android:id="@+id/pbUpload"
		        android:max="100"
		        android:layout_below="@id/tvProgressbar"
		        android:layout_marginTop="10dp"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        style="?android:attr/progressBarStyleHorizontal"/>
	    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>