<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/daze_bgcolor"
    android:gravity="center_horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <ImageView
        android:id="@+id/about_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/daze_logo" />

    <com.kplus.car.widget.RegularTextView
        android:id="@+id/about_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/daze_darkgrey8"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_app_version"
        android:layout_marginTop="20dp"
        android:background="@color/daze_bgcolor"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/daze_white_smoke2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2" >

            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="25dp"
                android:text="微信公众平台"
                android:textColor="@color/daze_load_normal_end"
                android:textSize="12sp"
                android:drawableLeft="@drawable/c_wechat"
                android:drawablePadding="10dp" />

            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:layout_marginRight="25dp"
                android:text="che9158"
                android:textColor="@color/daze_black2"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/daze_white_smoke2"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone" >

            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="25dp"
                android:text="用户交流QQ群"
                android:textColor="@color/daze_load_normal_end"
                android:textSize="12sp"
                android:drawableLeft="@drawable/c_qq"
                android:drawablePadding="10dp" />

            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:layout_marginRight="25dp"
                android:text="390838294"
                android:textColor="@color/daze_black2"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/daze_white_smoke2" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/llPhone" >

            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="25dp"
                android:text="客服热线"
                android:textColor="@color/daze_load_normal_end"
                android:textSize="12sp"
                android:drawableLeft="@drawable/c_phone"
                android:drawablePadding="10dp"  />

            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:layout_marginRight="25dp"
                android:text="4008066330"
                android:textColor="#ef7521"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/daze_white_smoke2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <com.kplus.car.widget.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="©2015 达则科技"
            android:textColor="@color/daze_darkgrey8"
            android:textSize="12sp" />

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/about_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Rights Reserved"
            android:textColor="@color/daze_darkgrey8"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>