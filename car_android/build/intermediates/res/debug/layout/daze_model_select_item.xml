<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <com.kplus.car.widget.RegularTextView
        android:id="@+id/model_select_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/daze_bgcolor"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/daze_vehicle_mode_selected_item_title"
        android:textSize="13sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/model_select_item_title"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/daze_white" >

        <ImageView
            android:id="@+id/model_select_item_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/daze_car_default" />

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/model_select_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:padding="8dp"
            android:singleLine="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/daze_load_normal_end"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/D:/workspace/car_android/res/layout/daze_model_select_item.xml -->