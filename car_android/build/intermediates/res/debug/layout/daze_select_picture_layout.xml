<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/daze_bgcolor"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="20dp"
    android:paddingTop="15dp" >
    
    <com.kplus.car.widget.RegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传图片"
        android:textColor="@color/daze_load_normal_end"
        android:gravity="center"
        android:textSize="13sp"
        android:background="@color/daze_bgcolor" />
	<Button
	    android:id="@+id/btAlbum"
	    android:layout_width="match_parent"
	    android:layout_height="44dp"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/daze_btn_bg_white"
	    android:gravity="center"
	    android:text="从相册选取"
	    android:textSize="15sp"
	    android:textColor="@color/daze_black2"/>
	<com.kplus.car.widget.RegularTextView
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/daze_darkgrey7" />
	<Button
	    android:id="@+id/btCamera"
	    android:layout_width="match_parent"
	    android:layout_height="44dp"
	    android:background="@drawable/daze_btn_bg_white"
	    android:gravity="center"
	    android:text="拍照"
	    android:textSize="15sp"
	    android:textColor="@color/daze_black2" />		    
       <Button
           android:id="@+id/btCancel"
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="44dp"
           android:background="@drawable/daze_btn_bg_light_gray_2"
           android:gravity="center"
           android:text="取消"
           android:textSize="15sp"
           android:textColor="@color/daze_black2" />

</LinearLayout>
