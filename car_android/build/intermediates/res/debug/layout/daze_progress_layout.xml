<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="288dp" android:layout_height="wrap_content"
    android:background="@drawable/daze_alert_dialog_background"
    android:orientation="vertical">
    <com.kplus.car.widget.RegularTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/daze_alert_top_background2"
        android:gravity="center_horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        android:text="上传中"
        android:textSize="14sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/daze_white"
        android:paddingBottom="32dp">
        <ProgressBar
            android:id="@+id/uploadProgressBar"
            android:layout_width="144dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/daze_progressbar2"/>
        <com.kplus.car.widget.RegularTextView
            android:id="@+id/tvFailInfo"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="请检查网络是否正常"
            style="@style/font_body1"
            android:gravity="center"
            android:background="@color/daze_white"/>
    </RelativeLayout>
    <com.kplus.car.widget.RegularTextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ececec"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@drawable/daze_alert_bottom_background">
        <Button
            android:id="@+id/btCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/daze_alert_left_button"
            android:text="取消"
            android:textSize="15sp"
            android:textColor="@color/daze_textcolor2"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btReUpload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/daze_alert_right_button"
            android:layout_marginLeft="1dp"
            android:text="重新上传"
            android:textSize="15sp"
            android:textColor="@color/daze_textcolor1"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
