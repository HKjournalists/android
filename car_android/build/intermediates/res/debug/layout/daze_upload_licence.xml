<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/daze_upload_licence_background" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp" >
        <ImageView
	        android:id="@+id/ivBack"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:layout_centerVertical="true"
	        android:src="@drawable/daze_back_light" />
	    <com.kplus.car.widget.RegularTextView
	        android:id="@+id/tvTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="车辆认证"
	        android:textColor="#989898"
	        android:textSize="16dp"
	        android:layout_centerInParent="true" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    <com.kplus.car.widget.RegularTextView
        android:id="@+id/tvDeclare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="请确认信息是否正确，\n否则将影响审核结果^_^"
        android:textColor="@color/daze_white"
        android:textSize="14dp" />
    <LinearLayout
        android:id="@+id/userInfoView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:weightSum="8" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2" >
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvVehicleNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/daze_white"
                android:textSize="13sp"
                android:gravity="bottom"
                android:layout_marginLeft="60dp"
                android:paddingBottom="10dp" />
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvVehicleType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/daze_white"
                android:textSize="13sp"
                android:gravity="bottom"
                android:layout_marginLeft="60dp"
                android:paddingBottom="10dp" />
        </LinearLayout>
        <com.kplus.car.widget.RegularTextView
            android:id="@+id/tvOwnerName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="@color/daze_white"
            android:textSize="13sp"
            android:gravity="top"
            android:layout_marginLeft="60dp"
            android:paddingTop="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvUseType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/daze_white"
                android:textSize="13sp"
                android:gravity="bottom"
                android:layout_marginLeft="60dp"
                android:paddingBottom="10dp" />
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvBrandMode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/daze_white"
                android:textSize="13sp"
                android:gravity="bottom"
                android:paddingBottom="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >
            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvFrameNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/daze_white"
                android:textSize="13sp"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >
            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvMotorNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/daze_white"
                android:textSize="13sp"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3" >
            <com.kplus.car.widget.RegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvRegistDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/daze_white"
                android:textSize="13sp"
                android:gravity="bottom"
                android:layout_marginLeft="30dp"
                android:paddingBottom="10dp" />
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvAbtainDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/daze_white"
                android:textSize="13sp"
                android:gravity="bottom"
                android:layout_marginLeft="30dp"
                android:paddingBottom="10dp" />
        </LinearLayout>
    </LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="24dp"
	    android:orientation="horizontal"
	    android:gravity="center">
	    <Button
	        android:id="@+id/btRetake"
	        android:layout_width="120dp"
	        android:layout_height="40dp"
	        android:background="@drawable/daze_upload_licence_white"
	        android:text="重拍"
	        android:textSize="15dp"
	        android:textColor="@color/daze_textcolor5" />
	    <Button
	        android:id="@+id/btSubmit "
	        android:layout_width="120dp"
	        android:layout_height="40dp"
	        android:layout_marginLeft="16dp"
	        android:background="@drawable/daze_upload_licence_orange"
	        android:text="提交审核"
	        android:textSize="15dp"
	        android:textColor="@color/daze_textcolor2" />
	    <Button
	        android:id="@+id/btReUpload"
	        android:layout_width="120dp"
	        android:layout_height="40dp"
	        android:layout_marginLeft="16dp"
	        android:background="@drawable/daze_upload_licence_white"
	        android:text="重新上传"
	        android:textSize="15dp"
	        android:textColor="@color/daze_textcolor5" />
	    <Button
	        android:id="@+id/btCancelUpload"
	        android:layout_width="120dp"
	        android:layout_height="40dp"
	        android:background="@drawable/daze_upload_licence_white"
	        android:text="取消"
	        android:textSize="15dp"
	        android:textColor="@color/daze_textcolor5" />
	</LinearLayout>
	<include layout="@layout/daze_uploading"/>
</RelativeLayout>
