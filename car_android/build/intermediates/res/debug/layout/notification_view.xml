<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/daze_white">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <!-- 用这个控件，收到通知会挂 -->
        <!--<com.kplus.car.widget.RegularTextView-->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/daze_black2"
            android:textSize="18dp"/>
        <!--<com.kplus.car.widget.RegularTextView-->
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/daze_darkgrey9"
            android:textSize="14dip"
            android:maxLines="2"/>
    </LinearLayout>
</LinearLayout><!-- From: file:/D:/workspace/car_android/res/layout/notification_view.xml -->