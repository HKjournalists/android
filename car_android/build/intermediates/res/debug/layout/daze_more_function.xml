<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/daze_bgcolor" >
    
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/daze_white" >
        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/daze_btn_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />
        <com.kplus.car.widget.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="更多"
            style="@style/font_title2" />
    </RelativeLayout>
    
    <ScrollView
        android:layout_below="@id/rl_top"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:layout_marginBottom="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true" >
		    <RelativeLayout
	            android:id="@+id/rlPushTimeSet"
	            android:layout_width="match_parent"
	            android:layout_height="56dp"
	            android:layout_marginTop="16dp"
	            android:background="@drawable/daze_white_up_darkgray_down"
	            android:clickable="true"
	            android:visibility="visible" >		
	            <com.kplus.car.widget.RegularTextView
	                android:id="@+id/tvPushLabel"
	                android:layout_centerVertical="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="24dp"
	                android:gravity="center"
	                android:text="违章消息推送"
	                style="@style/font_body1" />
	            <com.kplus.car.widget.RegularTextView
	                android:id="@+id/tvPushTime"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="48dp"
	                android:text="推送时间  08:00-23:00"
	                style="@style/font_body2" />"
	            <ImageView
	                android:layout_width="24dp"
         			android:layout_height="24dp"
         			android:layout_marginRight="16dp"
	                android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:src="@drawable/daze_arrow_press_up"
		            android:scaleType="center" />
	        </RelativeLayout>
	        <RelativeLayout 
	            android:id="@+id/act2"
	            android:background="#ffffff"
	            android:layout_marginTop="16dp"
	            android:layout_marginBottom="16dp"
	            android:layout_below="@id/rlPushTimeSet"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content">        
	        <RelativeLayout
	            android:id="@+id/rlAbout"
	            android:layout_width="match_parent"
	            android:layout_height="56dp"
	            android:background="@drawable/daze_white_up_darkgray_down"
	            android:clickable="true" >	
	            <com.kplus.car.widget.RegularTextView
	                android:id="@+id/tvAbout"
	                android:layout_centerVertical="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="24dp"
	                android:gravity="center"
	                android:text="联系我们"
	                style="@style/font_body1" />
	            <ImageView
	                android:layout_width="24dp"
         			android:layout_height="24dp"
         			android:layout_marginRight="16dp"
	                android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:src="@drawable/daze_arrow_press_up"
		            android:scaleType="center" />
	        </RelativeLayout>
	        <RelativeLayout 
	            android:id="@+id/lin4"
		        android:layout_width="fill_parent"
		        android:layout_height="1dp"
		        android:background="#ececec"
		        android:layout_below="@id/rlAbout"
		        android:layout_marginLeft="16dp"
		        android:layout_marginRight="16dp"></RelativeLayout>
	        <RelativeLayout
	            android:id="@+id/rlHelp"
	            android:layout_width="match_parent"
	            android:layout_height="56dp"
	            android:layout_below="@id/lin4"
	            android:background="@drawable/daze_white_up_darkgray_down"
	            android:clickable="true" >		
	            <com.kplus.car.widget.RegularTextView
	                android:id="@+id/tvHelp"
	                android:layout_centerVertical="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="24dp"
	                android:gravity="center"
	                android:text="使用帮助"
	                style="@style/font_body1" />
	            <ImageView
	                android:layout_width="24dp"
         			android:layout_height="24dp"
         			android:layout_marginRight="16dp"
	                android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:src="@drawable/daze_arrow_press_up"
		            android:scaleType="center" />
	        </RelativeLayout>	        
	        <RelativeLayout 
	            android:id="@+id/lin5"
		        android:layout_width="fill_parent"
		        android:layout_height="1dp"
		        android:background="#ececec"
		        android:layout_below="@id/rlHelp"
		        android:layout_marginLeft="16dp"
		        android:layout_marginRight="16dp"></RelativeLayout>
	        
	        <RelativeLayout
	            android:id="@+id/rlUseragreement"
	            android:layout_width="match_parent"
	            android:layout_height="56dp"
	            android:layout_below="@id/lin5"
	            android:background="@drawable/daze_white_up_darkgray_down"
	            android:clickable="true" >
	            <com.kplus.car.widget.RegularTextView
	                android:id="@+id/tvUseragreement"
	                android:layout_centerVertical="true"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="24dp"
	                android:gravity="center"
	                android:text="用户协议"
	                style="@style/font_body1" />
	            <ImageView
	                android:layout_width="24dp"
         			android:layout_height="24dp"
         			android:layout_marginRight="16dp"
	                android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:src="@drawable/daze_arrow_press_up"
		            android:scaleType="center" />
	        </RelativeLayout>
	        </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    
    

</RelativeLayout>
