<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/daze_white"
	android:gravity="center_horizontal">

	<com.kplus.car.widget.RegularTextView
		android:id="@+id/tvTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:textColor="@color/daze_black2"
		android:textSize="16sp"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:orientation="horizontal"
		android:layout_marginBottom="24dp">

		<LinearLayout
			android:id="@+id/toWechatFriend"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center_horizontal">

			<ImageView
				android:id="@+id/ivWechatFriend"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:src="@drawable/weixinhaoyou"/>

			<com.kplus.car.widget.RegularTextView
				android:id="@+id/tvWechatFriend"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="微信好友"
				android:textSize="14sp"
				android:textColor="@color/daze_darkgrey9"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/toWechatmoment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_marginLeft="40dp">

			<ImageView
				android:id="@+id/ivWechatmoment"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:src="@drawable/weixinpengyouquan"/>

			<com.kplus.car.widget.RegularTextView
				android:id="@+id/tvWechatmoment"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="微信朋友圈"
				android:textSize="14sp"
				android:textColor="@color/daze_darkgrey9"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
