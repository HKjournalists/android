<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llCellItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/daze_white1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@dimen/w_i_day_marginTop"
                android:gravity="center"
                android:text="@null"
                android:textColor="@color/daze_black2"
                android:textSize="@dimen/w_i_textsize"/>

            <ImageView
                android:id="@+id/ivWeatherIcon"
                android:layout_width="@dimen/w_i_icon_wh"
                android:layout_height="@dimen/w_i_icon_wh"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@null"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llTop"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_i_tw_Height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/w_i_weather_marginTop"
                android:gravity="center"
                android:orientation="vertical">
                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/tvWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/w_i_weather_height"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@null"
                    android:textColor="@color/daze_black2"
                    android:textSize="@dimen/w_i_textsize"/>

                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/tvTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/w_i_temperature_marginTop"
                    android:gravity="center_horizontal|top"
                    android:singleLine="true"
                    android:text="@null"
                    android:textColor="@color/daze_black2"
                    android:textSize="@dimen/w_i_textsize"/>
            </LinearLayout>

        </LinearLayout>

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/tvWashDescr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/llBottom"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/w_i_washDescr_marginBottom"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/w_i_washDescr_marginTop"
            android:gravity="center"
            android:text="@null"
            android:textColor="@color/daze_black2"
            android:textSize="@dimen/w_i_textsize"/>
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/workspace/car_android/res/layout/weather_item_layout.xml -->