<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="259dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_gravity="bottom"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/weizhang_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.kplus.car.widget.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="违章"
                android:textColor="@color/daze_black2"
                android:textSize="18sp"/>

            <com.kplus.car.widget.RegularTextView
                android:id="@+id/weichuli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未处理"
                android:textColor="@color/daze_darkgrey9"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="16dp"/>

            <com.kplus.car.widget.RegularTextView
                android:id="@+id/weizhang_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/weichuli"
                android:textSize="48sp"
                android:text="0"
                android:textColor="@color/daze_orangered5"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="5dp"/>

            <com.kplus.car.widget.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/weizhang_num"
                android:layout_alignBottom="@id/weichuli"
                android:textSize="14sp"
                android:text="条"
                android:textColor="@color/daze_darkgrey9"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:id="@+id/refresh_weizhang"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:padding="5dp"
                android:src="@drawable/refresh_cwz"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"/>

            <com.kplus.car.widget.RegularTextView
                android:id="@+id/no_weizhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/daze_darkgrey9"
                android:textSize="14sp"
                android:layout_centerInParent="true"/>

            <android.support.v7.widget.GridLayout
                android:id="@+id/fakuan_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/weichuli"
                android:layout_marginLeft="150dp"
                app:rowCount="2"
                app:columnCount="2"
                android:visibility="gone"
                app:orientation="horizontal">

                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/fakuan"
                    android:textColor="@color/daze_black2"
                    android:textSize="18sp"/>

                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/koufen"
                    android:textColor="@color/daze_black2"
                    android:textSize="18sp"/>

                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/fakuan_label"
                    android:text="罚款"
                    android:textSize="14sp"
                    android:textColor="@color/daze_darkgrey9"
                    android:paddingTop="5dp"
                    android:paddingRight="50dp"/>

                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/koufen_label"
                    android:text="扣分"
                    android:textSize="14sp"
                    android:textColor="@color/daze_darkgrey9"/>

            </android.support.v7.widget.GridLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>

