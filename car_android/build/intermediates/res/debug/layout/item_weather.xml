<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/layout"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <View
            android:layout_width="2px"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:background="@color/daze_darkgrey7"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.kplus.car.widget.RegularTextView
                android:id="@+id/phenomenon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/daze_darkgrey9"
                android:textSize="14sp"/>

            <com.kplus.car.widget.RegularTextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/daze_darkgrey9"
                android:textSize="14sp"/>

        </LinearLayout>

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/wash_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:textColor="@color/daze_orangered5"
            android:textSize="24sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/icon_weather_arrow"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
