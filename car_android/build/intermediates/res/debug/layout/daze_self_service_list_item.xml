<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/daze_white" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" >

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/self_service_listItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:textColor="@color/daze_black2"
            android:textSize="16sp"/>

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/self_service_listItem_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/daze_blue3"
            android:textSize="14sp"/>

        <com.kplus.car.widget.RegularTextView
            android:id="@+id/self_service_listItem_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/daze_btn_bg_light_gray"
            android:layout_alignLeft="@id/self_service_listItem_name"
            android:layout_below="@id/self_service_listItem_name"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:drawableLeft="@drawable/daze_but_icons_address"
            android:drawablePadding="10dp"
            android:textColor="@color/daze_darkgrey1"
            android:textSize="14sp" />
        <com.kplus.car.widget.RegularTextView
            android:id="@+id/self_service_listItem_callphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/daze_btn_bg_light_gray"
            android:layout_alignLeft="@id/self_service_listItem_name"
            android:layout_below="@id/self_service_listItem_address"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:drawableLeft="@drawable/daze_but_icons_call"
            android:drawablePadding="10dp"
            android:textColor="@color/daze_darkgrey1"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/workspace/car_android/res/layout/daze_self_service_list_item.xml -->