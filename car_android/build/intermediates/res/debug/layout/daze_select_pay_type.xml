<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlSelectPayType"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#99000000"
    android:visibility="gone"  >
    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:background="@color/daze_bgcolor"
		    android:paddingLeft="16dp"
		    android:paddingRight="16dp"
		    android:paddingBottom="20dp"
		    android:paddingTop="15dp"
		    android:layout_alignParentBottom="true" >
		    <com.kplus.car.widget.RegularTextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="请选择支付方式"
		        android:textColor="@color/daze_load_normal_end"
		        android:gravity="center"
		        android:textSize="13sp"
		        android:background="@color/daze_bgcolor" />
	        <Button
	            android:id="@+id/btAlipay"
	            android:layout_width="match_parent"
	            android:layout_height="44dp"
	    		android:layout_marginTop="10dp"
	            android:background="@drawable/daze_btn_bg_white"
	            android:gravity="center"
	            android:text="支付宝(推荐)"
	            android:textSize="15sp"
	            android:textColor="@color/daze_black2"
	            android:onClick="click"/>
	        <com.kplus.car.widget.RegularTextView
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@color/daze_darkgrey7"
                android:visibility="gone"/>
	        <Button
	            android:id="@+id/btYinlian"
	            android:layout_width="match_parent"
	            android:layout_height="44dp"
	            android:background="@drawable/daze_btn_bg_white"
	            android:gravity="center"
	            android:text="银联"
	            android:textSize="15sp"
	            android:textColor="@color/daze_black2"
	            android:onClick="click"
                android:visibility="gone"/>
        <com.kplus.car.widget.RegularTextView
			android:id="@+id/alipayDevider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/daze_darkgrey7" />
        <Button
            android:id="@+id/btLianlian"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/daze_btn_bg_white"
            android:gravity="center"
            android:text="银行卡支付"
            android:textSize="15sp"
            android:textColor="@color/daze_black2"
            android:onClick="click"
			android:visibility="visible"/>
		    <com.kplus.car.widget.RegularTextView
				android:id="@+id/yinhangkaDevider"
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@color/daze_darkgrey7"
	            android:visibility="visible" />
	        <Button
	            android:id="@+id/btWeiXin"
	            android:layout_width="match_parent"
	            android:layout_height="44dp"
	            android:background="@drawable/daze_btn_bg_white"
	            android:gravity="center"
	            android:text="微信支付"
	            android:textSize="15sp"
	            android:textColor="@color/daze_black2"
	            android:onClick="click"
	            android:visibility="visible" />
	        <Button
	            android:id="@+id/btCancel"
	            android:layout_marginTop="10dp"
	            android:layout_width="match_parent"
	            android:layout_height="44dp"
	            android:background="@drawable/daze_btn_bg_light_gray_2"
	            android:gravity="center"
	            android:text="取消"
	            android:textSize="15sp"
	            android:textColor="@color/daze_black2"
	            android:onClick="click" />
        </LinearLayout>	
</RelativeLayout>
