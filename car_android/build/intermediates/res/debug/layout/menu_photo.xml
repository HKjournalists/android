<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/daze_bgcolor"
    android:padding="20dp">

    <Button
        android:id="@+id/btAlbum"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/daze_btn_bg_white"
        android:gravity="center"
        android:text="从相册选取"
        android:textSize="15sp"
        android:textColor="@color/daze_black2"/>
    <com.kplus.car.widget.RegularTextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/daze_darkgrey7" />
    <Button
        android:id="@+id/btCamera"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/daze_btn_bg_white"
        android:gravity="center"
        android:text="拍照"
        android:textSize="15sp"
        android:textColor="@color/daze_black2" />
    <Button
        android:id="@+id/btCancel"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/daze_btn_bg_light_gray_2"
        android:gravity="center"
        android:text="取消"
        android:textSize="15sp"
        android:textColor="@color/daze_black2" />
</LinearLayout><!-- From: file:/D:/workspace/car_android/res/layout/menu_photo.xml -->