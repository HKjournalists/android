<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cn_white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_top_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/cn_line_color"/>

    <RelativeLayout
        android:id="@+id/rlServiceTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cn_white">
        <com.kplus.car.widget.RegularTextView
            android:id="@+id/tvIconNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/cn_margin_left"
            android:background="@drawable/cn_icon_service_none"
            android:gravity="center"
            android:text="@null"
            android:textColor="@color/cn_font_color"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/tvIconNum"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@null"
                android:textColor="@color/cn_common_cars_bgcolor"
                android:textSize="16sp"/>

            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvServicePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical"
                android:text="@null"
                android:textColor="@color/cn_orangered5"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view_center_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="42dp"
        android:background="@color/cn_line_color"/>
</LinearLayout><!-- From: file:/D:/workspace/car_android/Car_washing/src/main/res/layout/cn_order_details_service_item.xml -->