<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llCarInfoMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cn_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cn_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cn_white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlLicence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cn_white">
                <ImageView
                    android:id="@+id/ivLicence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/cn_margin_left"
                    android:src="@drawable/cn_icon_licence"/>
                <LinearLayout
                    android:id="@+id/llLicence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/ivLicence"
                    android:background="@color/cn_transparent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">
                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/tvLicence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="5dp"
                        android:text="æµ™"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/ivLicenceArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/cn_icon_licence_arrow"/>
                </LinearLayout>

                <com.kplus.car.widget.RegularEditText
                    android:id="@+id/etLicence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/llLicence"
                    android:background="@null"
                    android:hint="@string/cn_enter_car_licence"
                    android:inputType="textUri"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:singleLine="true"
                    android:textColor="@color/cn_common_cars_bgcolor"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="50dp"
                android:background="@color/cn_line_color"/>

            <RelativeLayout
                android:id="@+id/rlModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_item_bg_selector">
                <ImageView
                    android:id="@+id/ivModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/cn_margin_left"
                    android:src="@drawable/cn_icon_model"/>

                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/tvCarModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/ivModel"
                    android:background="@null"
                    android:hint="@string/cn_enter_car_model"
                    android:maxLines="1"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="@null"
                    android:textColor="@color/cn_common_cars_bgcolor"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/cn_icon_right_arrow"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="50dp"
                android:background="@color/cn_line_color"/>

            <RelativeLayout
                android:id="@+id/rlCarColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_item_bg_selector">
                <ImageView
                    android:id="@+id/ivCarColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/cn_margin_left"
                    android:src="@drawable/cn_icon_color"/>
                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/tvCarColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/ivCarColor"
                    android:background="@null"
                    android:hint="@string/cn_enter_car_color"
                    android:maxLines="1"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="@null"
                    android:textColor="@color/cn_common_cars_bgcolor"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/cn_icon_right_arrow"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/cn_line_color"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/cn_space_color"/>
        </LinearLayout>

        <com.kplus.car.widget.RegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/ivCarColor"
            android:background="@null"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:text="@string/cn_common_cars"
            android:textColor="@color/cn_common_cars_bgcolor"
            android:textSize="16sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cn_white">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:background="@color/cn_timeline_color"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlTimelineCarsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cn_transparent"
                android:scrollbars="none">
            </android.support.v7.widget.RecyclerView>
        </FrameLayout>

    </LinearLayout>

</LinearLayout><!-- From: file:/D:/workspace/car_android/Car_washing/src/main/res/layout/cn_car_info.xml -->