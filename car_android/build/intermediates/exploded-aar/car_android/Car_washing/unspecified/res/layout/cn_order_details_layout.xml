<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlOrderDetail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cn_white"
    android:orientation="vertical">

    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cn_line_color"/>

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewTop"
        android:background="@color/cn_black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">
                <com.kplus.car.widget.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cn_order_num"
                    android:textColor="@color/cn_white"
                    android:textSize="16sp"/>
                <com.kplus.car.widget.RegularTextView
                    android:id="@+id/tvOrderNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="start"
                    android:singleLine="true"
                    android:text="@null"
                    android:textColor="@color/cn_white"
                    android:textSize="16sp"/>
            </LinearLayout>
            <com.kplus.car.widget.RegularTextView
                android:id="@+id/tvOrderStatu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="0dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:text="@null"
                android:textColor="@color/cn_oranger_color"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/cn_washing_service_bgcolor"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">
        <Button
            android:id="@+id/btnOrderEvaluate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_order_details_selector"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/cn_evalute"
            android:textColor="@color/cn_common_cars_bgcolor"
            android:textSize="16sp"
            android:visibility="visible"/>
        <Button
            android:id="@+id/btnOrderCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_order_details_selector"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/cn_order_cancel"
            android:textColor="@color/cn_common_cars_bgcolor"
            android:textSize="16sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnOrderPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_order_details_pay_selector"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/cn_pay"
            android:textColor="@color/cn_oranger_color"
            android:textSize="16sp"
            android:visibility="gone"/>
    </LinearLayout>

    <com.kplus.car.carwash.widget.CNCustomScrollView
        android:id="@+id/svDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llBottom"
        android:layout_below="@+id/rlTop"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cn_white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/cn_line_color"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_bg_selector">
                    <ImageView
                        android:id="@+id/ivName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/cn_margin_left"
                        android:src="@drawable/cn_icon_name"/>
                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/ivName"
                        android:background="@null"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:text="@null"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="50dp"
                    android:background="@color/cn_line_color"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_bg_selector">
                    <ImageView
                        android:id="@+id/ivMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/cn_margin_left"
                        android:src="@drawable/cn_icon_mobile"/>
                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/tvMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/ivMobile"
                        android:background="@null"
                        android:maxLines="1"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:text="@null"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="50dp"
                    android:background="@color/cn_line_color"/>

                <RelativeLayout
                    android:id="@+id/rlCarInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_bg_selector">
                    <ImageView
                        android:id="@+id/ivCarInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/cn_margin_left"
                        android:src="@drawable/cn_icon_car"/>
                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/tvCarInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/ivCarInfo"
                        android:background="@null"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:text="@null"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="50dp"
                    android:background="@color/cn_line_color"/>

                <RelativeLayout
                    android:id="@+id/rlCarLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_bg_selector">
                    <ImageView
                        android:id="@+id/ivCarLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/cn_margin_left"
                        android:src="@drawable/cn_icon_location_press"/>
                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/tvCarLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/ivCarLocation"
                        android:background="@null"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:text="@null"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="50dp"
                    android:background="@color/cn_line_color"/>

                <RelativeLayout
                    android:id="@+id/rlServiceTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_bg_selector">
                    <ImageView
                        android:id="@+id/ivServiceTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/cn_margin_left"
                        android:src="@drawable/cn_icon_time"/>
                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/tvServiceTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/ivServiceTime"
                        android:background="@null"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:text="@null"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/cn_line_color"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/cn_space_color"/>

                <!--选择的服务项目-->
                <com.kplus.car.carwash.widget.CNWashingServiceListView
                    android:id="@+id/lvServiceList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cn_transparent"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@null"
                    android:dividerHeight="0px"
                    android:listSelector="#00ffffff"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/cn_line_color"/>

                <RelativeLayout
                    android:id="@+id/rlVoucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_bg_selector">
                    <ImageView
                        android:id="@+id/ivVoucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/cn_margin_left"
                        android:src="@drawable/cn_icon_voucher"/>
                    <com.kplus.car.widget.RegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/ivVoucher"
                        android:background="@null"
                        android:maxLines="1"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:text="@string/cn_voucher"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="16sp"/>

                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/tvVoucherPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="30dp"
                        android:singleLine="true"
                        android:text="@null"
                        android:textColor="@color/cn_coupon_price"
                        android:textSize="16sp"/>

                </RelativeLayout>
                <View
                    android:id="@+id/viewVoucherLine"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/cn_line_color"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.kplus.car.widget.RegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toLeftOf="@+id/tvCostPrice"
                        android:background="@null"
                        android:maxLines="1"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:text="@string/cn_cost_price"
                        android:textColor="@color/cn_common_cars_bgcolor"
                        android:textSize="18sp"/>

                    <com.kplus.car.widget.RegularTextView
                        android:id="@+id/tvCostPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="30dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:text="@null"
                        android:textColor="@color/cn_oranger_color"
                        android:textSize="18sp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/cn_line_color"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/cn_space_color"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/cn_white"/>

            <com.kplus.car.widget.RegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/cn_margin_left"
                android:layout_toRightOf="@+id/ivCarColor"
                android:background="@null"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingTop="20dp"
                android:text="@string/cn_order_history"
                android:textColor="@color/cn_common_cars_bgcolor"
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/cn_line_color"/>

            <!--订单日志-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cn_white">
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="31dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/cn_timeline_color"/>

                <com.kplus.car.carwash.widget.CNWashingServiceListView
                    android:id="@+id/lvOrderLogList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cn_transparent"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@null"
                    android:dividerHeight="0px"
                    android:listSelector="#00ffffff"/>
            </FrameLayout>

        </LinearLayout>
    </com.kplus.car.carwash.widget.CNCustomScrollView>

</RelativeLayout><!-- From: file:/D:/workspace/car_android/Car_washing/src/main/res/layout/cn_order_details_layout.xml -->